<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="0dp"
    card_view:contentPaddingBottom="4dp"
    card_view:contentPaddingTop="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp">

        <com.zeyuan.kyq.widget.CircleImageView
            android:id="@+id/avatar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="@dimen/small_margin"
            android:layout_marginTop="@dimen/small_margin"
            android:src="@mipmap/default_avatar" />

        <TextView
            android:id="@+id/forum_host_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/avatar"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_toRightOf="@id/avatar"
            android:text="Robin"
            android:textColor="@color/item_forum_name"
            android:textSize="@dimen/front12" />

        <TextView
            android:id="@+id/time"
            android:visibility="visible"
            android:text="2015-01-08"
            android:layout_alignLeft="@+id/forum_host_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/time_color"
            android:layout_below="@+id/forum_host_name"
            android:layout_marginTop="@dimen/little_margin"
            android:textSize="@dimen/front10" />


        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/time"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginLeft="@dimen/small_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/has_photo"
            android:text="【免费咨询】深圳举行免费咨询活动，现在开始报名了"
            android:textColor="@color/item_forum_title"
            android:textSize="@dimen/front18" />

        <ImageView
            android:id="@+id/jinghua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/time"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/small_margin"
            android:src="@mipmap/jinghua"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/has_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/time"
            android:layout_marginLeft="@dimen/little_margin"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_toRightOf="@+id/jinghua"
            android:src="@mipmap/has_photo2" />

        <TextView
            android:id="@+id/reply_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/forum_host_name"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:drawableLeft="@mipmap/forum_reply_num"
            android:drawablePadding="@dimen/drawable_padding"
            android:text="795"
            android:textColor="@color/item_forum_name"
            android:textSize="@dimen/front10" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
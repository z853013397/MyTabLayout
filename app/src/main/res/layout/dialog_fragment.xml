<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:background="@drawable/mains_shape"
    android:orientation="vertical"
    android:paddingBottom="@dimen/small_margin">


    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height60"
        android:background="@drawable/top_textview_shape"
        android:ellipsize="end"
        android:gravity="center"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:singleLine="true"
        android:text="选择阶段对应的药物"
        android:textColor="@color/white"
        android:textSize="@dimen/front18" />


    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="@dimen/dialog_height"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/left_listview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@color/scroll_color"
            android:scrollbars="none" />

        <ListView
            android:id="@+id/rigth_listview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:divider="@null"
            android:dividerHeight="1dp"
            android:scrollbars="none" />
    </LinearLayout>

    <View style="@style/line_style" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height60"
        android:layout_marginTop="@dimen/small_margin"
        android:orientation="horizontal"
        android:paddingLeft="25dp"
        android:paddingRight="25dp">

        <Button
            android:id="@+id/cancle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_height"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            android:background="@drawable/cancel"
            android:text="@string/cancle" />

        <Button
            android:id="@+id/confirm"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_height"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            android:background="@drawable/dialog_confirm"
            android:text="@string/confirm"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>
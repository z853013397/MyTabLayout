<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_green"
    android:orientation="vertical">

    <include layout="@layout/toorbar" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:src="@mipmap/doctor" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="15dp"
        android:text="您好，我是您的私人小医生，由于不同的癌种"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="6dp"
        android:text="获得的治疗指导完全不同，所以了解患者的基"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="6dp"
        android:text="本情况很有必要哦"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <!--<Button-->
    <!--android:id="@+id/cancer_type"-->
    <!--style="@style/patient_info_button"-->
    <!--android:layout_marginTop="50dp"-->
    <!--android:text="@string/choose_cancer_type" />-->


    <com.zeyuan.kyq.widget.DoubleTvLayout
        android:id="@+id/cancer_type"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="48dp"
        app:left_txt="癌症种类" />

    <Button
        android:id="@+id/next_step"
        style="@style/patient_info"
        android:layout_marginTop="48dp"
        android:text="@string/next_step" />
</LinearLayout>

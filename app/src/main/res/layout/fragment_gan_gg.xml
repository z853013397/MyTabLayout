<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#F0F7F7"
              android:orientation="vertical"
              android:clickable="true"
              tools:context="com.zeyuan.kyq.fragment.GanGGFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <include layout="@layout/toorbar"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_height"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:text="当前得分："/>

            <TextView
                android:id="@+id/tv_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:text="级数："/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_height"
            android:layout_marginTop="10dp"
            android:background="@color/white">

            <TextView
                style="@style/patient_detail_left_textview_style"
                android:text="总胆红素"/>

            <TextView
                android:id="@+id/tv_zdhs"
                style="@style/patient_detail_right_textview_style"
                android:drawableRight="@mipmap/right"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_height"
            android:layout_marginTop="10dp"
            android:background="@color/white">

            <TextView
                style="@style/patient_detail_left_textview_style"
                android:text="血清蛋白"/>

            <TextView
                android:id="@+id/tv_xqdb"
                style="@style/patient_detail_right_textview_style"
                android:drawableRight="@mipmap/right"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_height"
            android:layout_marginTop="10dp"
            android:background="@color/white">

            <TextView
                style="@style/patient_detail_left_textview_style"
                android:text="凝血酶原时间延长"/>

            <TextView
                android:id="@+id/tv_nxm"
                style="@style/patient_detail_right_textview_style"
                android:drawableRight="@mipmap/right"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_height"
            android:layout_marginTop="10dp"
            android:background="@color/white">

            <TextView
                style="@style/patient_detail_left_textview_style"
                android:text="腹水程度"/>

            <TextView
                android:id="@+id/tv_fs"
                style="@style/patient_detail_right_textview_style"
                android:drawableRight="@mipmap/right"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_height"
            android:layout_marginTop="10dp"
            android:background="@color/white">

            <TextView
                style="@style/patient_detail_left_textview_style"
                android:text="肝性脑病（级）"/>

            <TextView
                android:id="@+id/tv_gxnb"
                style="@style/patient_detail_right_textview_style"
                android:drawableRight="@mipmap/right"/>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/finish"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/find_symptom_top_radiobutton_shape_selector"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:text="@string/finish"
        android:textColor="@color/white"
        android:textSize="@dimen/front18"
        android:visibility="visible"/>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/need_dismiss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="65dp"
        android:visibility="visible">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#14C1C8"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/first_digit"
                style="@style/patient_info_left_tv"
                android:text="原发肿瘤情况"/>

            <TextView
                android:id="@+id/current_case"
                style="@style/patient_info_right_tv"
                android:text=""/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"/>

        <LinearLayout
            android:id="@+id/ll2"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#14C1C8"
            android:orientation="horizontal">

            <TextView
                style="@style/patient_info_left_tv"
                android:text="区域淋巴结"/>

            <TextView
                android:id="@+id/time"
                style="@style/patient_info_right_tv"
                android:text=""/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"/>

        <LinearLayout
            android:id="@+id/ll3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:visibility="gone"
            android:background="#14C1C8"
            android:orientation="horizontal">

            <TextView
                style="@style/patient_info_left_tv"
                android:text="远处转移"/>

            <TextView
                android:id="@+id/is_effect"
                style="@style/patient_info_right_tv"
                android:text=""/>
        </LinearLayout>


        <TextView
            android:id="@+id/digit_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:text="@string/digit_desc_txt"
            android:textColor="@color/light_red"/>

        <Button
            android:id="@+id/next_step2"
            style="@style/patient_info"
            android:layout_marginTop="30dp"
            android:text="还剩一步"
            android:visibility="visible"/>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00a0ff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.zhu.xc.customview.MainActivity"
    tools:showIn="@layout/activity_main">
<!--<com.zhu.xc.customview.CirCleChangeView-->
    <!--android:id="@+id/view"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent" />-->

    <TextView
        android:layout_alignTop="@+id/layout"
        android:layout_alignRight="@+id/layout"
        android:layout_alignLeft="@+id/layout"
        android:background="@drawable/shade_top"
        android:layout_width="match_parent"
        android:layout_height="28dp" />
    <RelativeLayout
        android:id="@+id/layout"
        android:elevation="5dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        android:background="@drawable/relative_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/html_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



    </RelativeLayout>
    <TextView
        android:layout_alignRight="@+id/layout"
        android:layout_alignLeft="@+id/layout"
        android:layout_alignBottom="@+id/layout"
        android:background="@drawable/shade"
        android:layout_width="match_parent"
        android:layout_height="28dp" />
</RelativeLayout>
